{
  "compilerOptions": {
    "newLine": "LF",
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {},
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "lib",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "examples", "test", "lib/**/*"],
  "include": ["src"]
}
